package  {		import flash.display.MovieClip;	import CronoEvents;	import Juego1Event;	import BarraEvents;		public class Juego1 extends MovieClip{				private var juego:Juego1View;		private var crono:Crono;		private var barra:BarraPuntos;		private var puntosTotales:uint=0;						public function Juego1() { // constructor code			agregarJuego();			pintarCronoYbarra();			pintarProfe();		}				private function agregarJuego(){			juego=new Juego1View();			addChild(juego);			juego.addEventListener(Juego1Event.PUNTO, nuevoPunto);					}				private function pintarProfe(){					}				private function pintarCronoYbarra(){			crono= new Crono();			crono.x=30;			crono.y=3;			addChild(crono);			crono.addEventListener(CronoEvents.TIEMPO_COMPLETO, terminarJuego);						barra= new BarraPuntos();			barra.x=530;			barra.y=7;			barra.addEventListener(BarraEvents.PUNTOS_COMPLETOS, puntosCompletos);						//barra.addEventListener(CronoEvents.PUNTOS_COMPLETOS, finJuego);			addChild(barra);			crono.iniciarCrono(30); //Luego va a iniciar cuando se cierre al profe!!!!											}				private function puntosCompletos(e:BarraEvents){			trace('PUNTOS COMPLETOSSSSSSSSSS!!!!!!!!!!!! -------------');			crono.pararCrono();			terminarJuego();		}				private function terminarJuego(e:CronoEvents=null){			trace('TERMINAR JUEGO!!!');			juego.finJuego();		}				private function nuevoPunto(e:Juego1Event){			barra.punto(1);			puntosTotales+=2;			trace(puntosTotales);			trace('......');		}			}	}