package assets{			import com.facebook.graph.Facebook;import com.hexagonstar.util.debug.Debug;import flash.display.Bitmap;import flash.display.MovieClip;	import flash.net.URLRequest;	import flash.display.Loader;	import flash.events.Event;	import flash.events.ProgressEvent;	import flash.system.Security;	import flash.system.LoaderContext;	import flash.system.ApplicationDomain;	import flash.display.Sprite;		public class IcoAmigo extends MovieClip{				private var _foto_user:String;		private var _imagen:URLRequest;		private var context:LoaderContext;		private var _conexion:Loader = new Loader();		public function IcoAmigo() { // CONSTRUCTOR:            Debug.trace('entro a icoAmigo!')			Security.loadPolicyFile('http://api.facebook.com/crossdomain.xml');			Security.loadPolicyFile('http://profile.ak.fbcdn.net/crossdomain.xml');			Security.allowDomain('http://profile.ak.fbcdn.net');			Security.allowInsecureDomain('http://profile.ak.fbcdn.net');			Security.loadPolicyFile('https://fbcdn-profile-a.akamaihd.net/crossdomain.xml');			context = new LoaderContext();			context.checkPolicyFile = true;			context.applicationDomain = ApplicationDomain.currentDomain;		}				public function cargarImagen(id_facebook:String):void{			_foto_user = Facebook.getImageUrl(id_facebook,'large');			_imagen = new URLRequest(_foto_user);			_conexion.load(_imagen, context);			_conexion.contentLoaderInfo.addEventListener(Event.COMPLETE,completado);			_conexion.contentLoaderInfo.addEventListener(ProgressEvent.PROGRESS,progreso);		}				private function completado(evt:Event){			evt.target.content.x = 0;			evt.target.content.y = 0;			evt.target.content.width=71;			evt.target.content.height=71;            Bitmap(evt.target.content).smoothing= true;			this.addChild(evt.target.content);		}				private function progreso(evt:ProgressEvent){					}	}	}